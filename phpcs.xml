<?xml version="1.0"?>
<ruleset name="Elgg">
    <!-- Use Elgg coding standards -->
    <rule ref="./vendor/elgg/sniffs/src/Elgg"/>

    <!-- Include only the main module PHP directories -->
    <file>mod</file>

    <!-- Exclude files that are irrelevant for PHPCS -->
    <exclude-pattern>mod/ckeditor/vendors/**/*.js</exclude-pattern>
    <exclude-pattern>mod/ckeditor/vendors/**/*.css</exclude-pattern>
    <exclude-pattern>mod/theme_sandbox/views/**/*.php</exclude-pattern>
</ruleset>
